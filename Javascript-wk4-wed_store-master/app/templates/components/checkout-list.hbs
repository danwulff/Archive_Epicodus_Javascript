<div class="row">
  {{#each products.items as |product|}}
    {{ display-cart product=product }}
  {{/each}}
</div>

<div class="row">
  <div class="col-xs-9 cart">

  </div>
  <div class="col-xs-2 cart">
    <h3>Total:</h3>
    {{#if totalPrice}}
      ${{totalPrice}}
    {{else}}
      $0
    {{/if}}
  </div>
</div>
